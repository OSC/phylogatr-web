#!/bin/bash
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=28
#SBATCH -t 04:00:00
#SBATCH --job-name="phylogatr_update_species_metrics"

set -xe

cd $SLURM_SUBMIT_DIR
module load ruby

cp /fs/project/PAS1604/pipeline/dev/genes.tar.gz $TMPDIR
cd $TMPDIR
time tar xzf genes.tar.gz

cd $SLURM_SUBMIT_DIR

time GENBANK_ROOT=$TMPDIR/genes bin/rake pipeline:update_species_metrics
