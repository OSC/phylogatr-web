#!/bin/bash

[ -f "$PWD/.env.local" ] && source "$PWD/.env.local"

export WORKDIR=${WORKDIR:=/fs/project/PAS1604/pipeline/dev}

# genback data
export PHYLOGATR_GENBANK_DIR="${PHYLOGATR_GENBANK_DIR:=/fs/project/PAS1604/genbank}"

# gbif
export PHYLOGATR_GBIF_ID="${GBIF_ID:=0147211-200613084148143}"
export PHYLOGATR_GBIF_DIR="${PHYLOGATR_GBIF_DIR:=.}"
_PHYLOGATR_GBIF_TXT="$PHYLOGATR_GBIF_DIR/$GBIF_ID.filtered.txt"
export PHYLOGATR_GBIF_TXT="${PHYLOGATR_GBIF_TXT:=$_PHYLOGATR_GBIF_TXT}"
export PHYLOGATR_GBIF_EXPANDED_TXT="${PHYLOGATR_GBIF_EXPANDED_TXT:=$PHYLOGATR_GBIF_TXT.expanded}"

# bold data
export PHYLOGATR_BOLD_DIR="${PHYLOGATR_GENBANK_DIR:=/fs/project/PAS1604/bold}"

# other stuff
export PHYLOGATR_RUBY_VERSION="$RUBY_VERSION"
