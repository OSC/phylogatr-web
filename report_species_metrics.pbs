#!/bin/bash
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=1
#SBATCH -t 01:00:00
#SBATCH --job-name="phylogatr_report_species_metrics"

set -xe

export WORKDIR=${WORKDIR:-/fs/project/PAS1604/pipeline/dev}

cd $SLURM_SUBMIT_DIR
module load ruby

cp $WORKDIR/genes.tar.gz $TMPDIR
time (cd $TMPDIR; tar xzf genes.tar.gz)

time GENBANK_ROOT=$TMPDIR/genes bin/rake metrics:species
